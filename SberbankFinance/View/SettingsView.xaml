<UserControl x:Class="SberbankFinance.View.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SberbankFinance.View" 
             xmlns:materialdesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:viewmodel="clr-namespace:SberbankFinance.ViewModel"
             d:DataContext="{d:DesignInstance Type=viewmodel:SettingsViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">
    
    <StackPanel Background="#151719">
        <StackPanel 
            VerticalAlignment="Top"
            Orientation="Horizontal"
            Height="50"
            Background="#212121">
            <Button
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding Path=NavigateHome}"
                >
                <materialdesign:PackIcon 
                    Kind="ArrowBack"
                    Foreground="Lime"
                    Height="30"
                    Width="30"
                    HorizontalAlignment="Center"
                    />
            </Button>
            <TextBlock
                Background="Transparent"
                Text="Настройки аккаунта"
                HorizontalAlignment="Center"
                Foreground="White"
                Margin="70 10"
                FontSize="18"
                
                />

        </StackPanel>
        <StackPanel >
            <Grid>
                <Button 
                    Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding Path=SetImageCommand}"
                    Foreground="White"
                    Height="140"
                    Width="100"
                    FontSize="16">
                    <materialdesign:PackIcon
                        Kind="Account"
                        Height="140"
                        Width="100"
                        HorizontalAlignment="Center"
                    />
                </Button>
                <Button 
                    Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding Path=SetImageCommand}"
                    Height="140"
                    Width="100"
                    Visibility="{Binding Path=HaveImage,Converter={StaticResource BooleanToVisibilityConverter}}"
                    FontSize="16">
                    <Image
                        Source="{Binding Path=ImageSource, Mode =TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Stretch="UniformToFill"/>
                </Button>
            </Grid>
        </StackPanel>
        <StackPanel 
            Orientation="Vertical"
            VerticalAlignment="Top"
            
            >

            <Button 
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding Path=GoAccountSettingsCommand}"
                Content="Изменить логин или пароль аккаунта"
                Foreground="White"
                Margin="0 0 0 10"
                FontSize="16"
                />
            <Button
                 Background="Transparent"
                BorderThickness="0"
                Content="Поставить цель"
                Foreground="White"
                 Margin="0 0 0 10"
                 FontSize="16"/>
            <Button
                 Background="Transparent"
                BorderThickness="0"
                Content="Добавить новую категорию"
                Foreground="White"
                 Margin="0 0 0 10"
                 FontSize="16"
                />
            <Button
                 Background="Transparent"
                BorderThickness="0"
                Content="Изменить цвета отображаемых категорий"
                Foreground="White"
                 Margin="0 0 0 10"
                 FontSize="16"
                />
            <Button
                 Background="Transparent"
                BorderThickness="0"
                Content="Изменить тип отображаемого графика"
                Foreground="White"
                 Margin="0 0 0 10"
                 FontSize="16"
                />
            <Button
                 Background="Transparent"
                BorderThickness="0"
                Content="Удалить аккаунт"
                Foreground="White"
                 FontSize="16"
                />
        </StackPanel>
    </StackPanel>
</UserControl>
